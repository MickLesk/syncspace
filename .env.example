# SyncSpace Environment Configuration

# ==================== DATABASE ====================
DATABASE_URL=sqlite:./data/syncspace.db
DATABASE_MAX_CONNECTIONS=10

# ==================== SERVER ====================
SERVER_HOST=127.0.0.1
SERVER_PORT=8080
FRONTEND_URL=http://localhost:5173

# ==================== AUTH ====================
JWT_SECRET=your-secret-key-change-this-in-production
JWT_EXPIRY_HOURS=24
PASSWORD_SALT_ROUNDS=12

# ==================== FILE STORAGE ====================
DATA_DIR=./data
MAX_FILE_SIZE_MB=100
ALLOWED_FILE_TYPES=*

# ==================== SEARCH ====================
SEARCH_INDEX_PATH=./data/search_index
SEARCH_FUZZY_ENABLED=true

# ==================== WEBSOCKET ====================
WEBSOCKET_MAX_CONNECTIONS=100
WEBSOCKET_PING_INTERVAL_SECONDS=30

# ==================== PERFORMANCE ====================
CACHE_ENABLED=true
CACHE_TTL_SECONDS=300
CACHE_MAX_SIZE_MB=100

# ==================== LOGGING ====================
RUST_LOG=info
LOG_LEVEL=info
LOG_FILE=./logs/syncspace.log

# ==================== BACKUP ====================
BACKUP_DIR=./backups
BACKUP_RETENTION_DAYS=30

# ==================== CORS ====================
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:8080

# ==================== OPTIONAL FEATURES ====================
ENABLE_2FA=true
ENABLE_ENCRYPTION=false
ENABLE_VIRUS_SCAN=false
ENABLE_THUMBNAILS=true
THUMBNAIL_SIZE=256

# ==================== EXTERNAL SERVICES (Optional) ====================
# S3_ACCESS_KEY=
# S3_SECRET_KEY=
# S3_BUCKET=
# S3_REGION=

# SMTP_HOST=
# SMTP_PORT=587
# SMTP_USERNAME=
# SMTP_PASSWORD=

# REDIS_URL=redis://localhost:6379

# ==================== DEVELOPMENT ====================
DEV_MODE=true
HOT_RELOAD=true
DEBUG_SQL=false
