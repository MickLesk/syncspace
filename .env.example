# SyncSpace Environment Configuration
# Copy this file to .env and customize for your deployment

# =============================================================================
# JWT SECURITY (REQUIRED FOR PRODUCTION)
# =============================================================================
# Generate a secure random key: openssl rand -base64 64
JWT_SECRET=your-super-secret-jwt-key-change-in-production-minimum-32-characters
JWT_EXPIRES_IN=24h

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================
# Host binding for Docker containers
SYNCSPACE_HOST=0.0.0.0
SYNCSPACE_PORT=8080
FRONTEND_URL=http://localhost:3000

# =============================================================================
# DATABASE (DOCKER PATHS)
# =============================================================================
DATABASE_URL=sqlite:./data/syncspace.db
DATABASE_MAX_CONNECTIONS=10
# Container paths
SYNCSPACE_DB_PATH=/app/data/syncspace.db
SYNCSPACE_DATA_DIR=/app/data

# =============================================================================
# RATE LIMITING & SECURITY
# =============================================================================
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60
PASSWORD_SALT_ROUNDS=12
SECURE_COOKIES=false

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
DATA_DIR=./data
# Maximum upload size in bytes (100MB = 104857600)
MAX_UPLOAD_SIZE=104857600
MAX_FILE_SIZE_MB=100
# Maximum files in batch operations
MAX_BATCH_SIZE=50
ALLOWED_FILE_TYPES=*

# ==================== SEARCH ====================
SEARCH_INDEX_PATH=./data/search_index
SEARCH_FUZZY_ENABLED=true

# ==================== WEBSOCKET ====================
WEBSOCKET_MAX_CONNECTIONS=100
WEBSOCKET_PING_INTERVAL_SECONDS=30

# ==================== PERFORMANCE ====================
CACHE_ENABLED=true
CACHE_TTL_SECONDS=300
CACHE_MAX_SIZE_MB=100

# ==================== LOGGING ====================
RUST_LOG=info
LOG_LEVEL=info
LOG_FILE=./logs/syncspace.log

# ==================== BACKUP ====================
BACKUP_DIR=./backups
BACKUP_RETENTION_DAYS=30

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# =============================================================================
# MONITORING (Optional)
# =============================================================================
GRAFANA_PASSWORD=secure-grafana-password

# ==================== OPTIONAL FEATURES ====================
ENABLE_2FA=true
ENABLE_ENCRYPTION=false
ENABLE_VIRUS_SCAN=false
ENABLE_THUMBNAILS=true
THUMBNAIL_SIZE=256

# ==================== EXTERNAL SERVICES (Optional) ====================
# S3_ACCESS_KEY=
# S3_SECRET_KEY=
# S3_BUCKET=
# S3_REGION=

# SMTP_HOST=
# SMTP_PORT=587
# SMTP_USERNAME=
# SMTP_PASSWORD=

# REDIS_URL=redis://localhost:6379

# ==================== DEVELOPMENT ====================
DEV_MODE=true
HOT_RELOAD=true
DEBUG_SQL=false
