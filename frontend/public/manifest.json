{
    "name": "SyncSpace - File Synchronization",
    "short_name": "SyncSpace",
    "description": "Modern self-hosted file synchronization and sharing platform with offline support",
    "start_url": "/",
    "display": "standalone",
    "scope": "/",
    "background_color": "#ffffff",
    "theme_color": "#3b82f6",
    "orientation": "portrait-primary",
    "dir": "ltr",
    "lang": "en",
    "icons": [
        {
            "src": "/favicon.png",
            "sizes": "32x32",
            "type": "image/png"
        },
        {
            "src": "/icon-192.png",
            "sizes": "192x192",
            "type": "image/png",
            "purpose": "any"
        },
        {
            "src": "/icon-192-maskable.png",
            "sizes": "192x192",
            "type": "image/png",
            "purpose": "maskable"
        },
        {
            "src": "/icon-512.png",
            "sizes": "512x512",
            "type": "image/png",
            "purpose": "any"
        },
        {
            "src": "/icon-512-maskable.png",
            "sizes": "512x512",
            "type": "image/png",
            "purpose": "maskable"
        },
        {
            "src": "/apple-touch-icon.png",
            "sizes": "180x180",
            "type": "image/png",
            "purpose": "any"
        }
    ],
    "screenshots": [
        {
            "src": "/screenshots/narrow-1.png",
            "sizes": "540x720",
            "type": "image/png",
            "form_factor": "narrow"
        },
        {
            "src": "/screenshots/narrow-2.png",
            "sizes": "540x720",
            "type": "image/png",
            "form_factor": "narrow"
        },
        {
            "src": "/screenshots/wide-1.png",
            "sizes": "1280x720",
            "type": "image/png",
            "form_factor": "wide"
        },
        {
            "src": "/screenshots/wide-2.png",
            "sizes": "1280x720",
            "type": "image/png",
            "form_factor": "wide"
        }
    ],
    "shortcuts": [
        {
            "name": "My Files",
            "short_name": "Files",
            "description": "View your files and folders",
            "url": "/?view=files",
            "icons": [
                {
                    "src": "/icons/files-shortcut.png",
                    "sizes": "192x192",
                    "type": "image/png"
                }
            ]
        },
        {
            "name": "Search",
            "short_name": "Search",
            "description": "Search your files",
            "url": "/?view=search",
            "icons": [
                {
                    "src": "/icons/search-shortcut.png",
                    "sizes": "192x192",
                    "type": "image/png"
                }
            ]
        },
        {
            "name": "Settings",
            "short_name": "Settings",
            "description": "Manage your settings",
            "url": "/?view=settings",
            "icons": [
                {
                    "src": "/icons/settings-shortcut.png",
                    "sizes": "192x192",
                    "type": "image/png"
                }
            ]
        }
    ],
    "categories": [
        "productivity",
        "utilities",
        "storage"
    ],
    "share_target": {
        "action": "/share",
        "method": "POST",
        "enctype": "multipart/form-data",
        "params": {
            "title": "title",
            "text": "text",
            "url": "url",
            "files": [
                {
                    "name": "media",
                    "accept": [
                        "image/*",
                        "video/*",
                        "audio/*",
                        "application/pdf",
                        ".doc",
                        ".docx",
                        ".xls",
                        ".xlsx"
                    ]
                }
            ]
        }
    },
    "file_handlers": [
        {
            "action": "/open-file",
            "accept": {
                "image/*": [
                    ".png",
                    ".jpg",
                    ".jpeg",
                    ".gif",
                    ".webp",
                    ".svg"
                ],
                "video/*": [
                    ".mp4",
                    ".webm",
                    ".ogg"
                ],
                "audio/*": [
                    ".mp3",
                    ".wav",
                    ".ogg"
                ],
                "application/pdf": [
                    ".pdf"
                ],
                "text/*": [
                    ".txt",
                    ".md",
                    ".json",
                    ".csv"
                ],
                "application/msword": [
                    ".doc",
                    ".docx"
                ],
                "application/vnd.openxmlformats-officedocument.wordprocessingml.document": [
                    ".docx"
                ]
            },
            "launch_type": "single-client"
        }
    ],
    "protocol_handlers": [
        {
            "protocol": "web+syncspace",
            "url": "/?protocol-action=%s"
        }
    ],
    "prefer_related_applications": false,
    "related_applications": []
}